<form class="container">
    <div class="row align-items-center">
        <div class="col align-self-center center-body">
            <img class="center-body" src="assets/images/logo_transparent.png" width="360" height="360" alt="storage master">
        </div>        
    </div>
    <div class="row align-items-center">
        <div class="col align-self-center">
            <div class="form-group">
                <input class="form-control" id="emailInput" type="text" placeholder="username or email" autofocus="true"/>
            </div>
            <div class="form-group">
                <input class="form-control" id="passwordInput" type="password" placeholder="password"/>
            </div>
            <button type="submit" {{on "click" (fn this.onLogin)}} class="btn btn-primary center-body">LOGIN</button>
        </div>
    </div>
</form>